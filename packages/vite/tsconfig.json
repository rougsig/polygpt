{
  "extends": "@workspace/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "#/*": [
        "./src/*"
      ],
      "#/test/*": [
        "./src/__tests__/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "__tests__"
  ]
}
